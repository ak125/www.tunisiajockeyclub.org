    "@prisma/client": "^6.1.0",
    "@remix-run/express": "^2.13.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "connect-redis": "^5.2.0",
    "dotenv": "^17.2.1",
    "express-session": "^1.17.3",
    "ioredis": "^5.3.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
