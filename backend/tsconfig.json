{
  "extends": "@fafa/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "lib": ["DOM", "ES2023"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/exports.js"],
  "exclude": ["src/**/_broken/**/*"]
}
